<p id="notice"><%= notice %></p>

<h1>Языки </h1>

<table>
  <thead>
    <tr>
      <th>Язык</th>
      <th>-Описание языка</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Показать', post %></td>
        <td><%= link_to 'Редактировать', edit_post_path(post) %></td>
        <td><%= link_to 'Удалить', post, method: :delete, data: { confirm: 'Вы уверенны?' } %></td>



      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить новый язык', new_post_path %>
